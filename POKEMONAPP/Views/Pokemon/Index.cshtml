@model POKEMONAPP.Models.PokemonList

<h2>Pokemon List</h2>
<ul>
    @foreach (var pokemon in Model.Results)
    {
        <li>
            <a href="@Url.Action("Details", "Pokemon", new { name = pokemon.Name })">
                @pokemon.Name
            </a>
        </li>
    }
</ul>

<div>
    @if (ViewBag.HasPrevious)
    {
            <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1 })">Previous</a>
    }
    @if (ViewBag.HasNext)
    {
            <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1 })">Next</a>
    }
</div>
